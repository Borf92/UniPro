{
    // Use IntelliSense to learn about possible attributes.
    // Hover to view descriptions of existing attributes.
    // For more information, visit: https://go.microsoft.com/fwlink/?linkid=830387
    "version": "0.2.0",
    "configurations": [
        {
            "type": "chrome",
            "request": "launch",
            "name": "Launch Vivaldi against localhost",
            "url": "http://localhost:44323",
            "webRoot": "${workspaceFolder}",
            "targetTypes": ["page", "webview"],
            "port": 4200,
            "runtimeExecutable": "C:/Users/BastrikovDG/AppData/Local/Vivaldi/Application/vivaldi.exe",
            "runtimeArgs": ["--remote-debugging-port=4200", "--new-window"]
        },
        {
            "type": "chrome",
            "request": "attach",
            "name": "Attach Vivaldi against localhost",
            "port": 4200,
            "urlFilter": "http://localhost:44323/*",
            "webRoot": "${workspaceFolder}",
            "targetTypes": ["page", "webview"]
          }
    ]
}